<style>
.fade-up { opacity: 0; transition: opacity 0.3s ease; }
.fade-up.animate { opacity: 1; animation: fadeInUp 1s; }

/* Mobile-only: enlarge genre SVG tiles without changing desktop */
@media (max-width: 48rem) {
  .genre-item {
    width: 9rem !important;
    height: 9rem !important;
  }

  .genre-item img {
    width: 100% !important;
    height: 100% !important;
    object-fit: contain !important;
  }

  /* Mobile: remove hover effect, use clicked state instead */
  .genre-item.group:hover img:first-child {
    opacity: 1 !important;
  }

  .genre-item.group:hover img:last-child {
    opacity: 0 !important;
  }

  .genre-item.group.active img:first-child {
    opacity: 0 !important;
  }

  .genre-item.group.active img:last-child {
    opacity: 1 !important;
  }
}
</style>

<script>
  // Mobile-only: convert hover to click/tap
  const isMobile = () => window.matchMedia("(max-width: 48rem)").matches;

  if (isMobile()) {
    const genreItems = document.querySelectorAll(".genre-item.group");

    genreItems.forEach((item) => {
      (item as HTMLElement).style.cursor = "pointer";

      item.addEventListener("click", (e) => {
        e.stopPropagation();
        // Remove active class from all other items
        genreItems.forEach((other) => other.classList.remove("active"));
        // Add active class to clicked item
        item.classList.add("active");
      });
    });

    // Click elsewhere to deselect
    document.addEventListener("click", () => {
      genreItems.forEach((item) => item.classList.remove("active"));
    });
  }
</script>