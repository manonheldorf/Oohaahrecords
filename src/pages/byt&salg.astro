<!-- JS TIL KNAP -->
<script>
  const btn = document.getElementById("bestilBtn");
  const msg = document.getElementById("successMsg");

  // N√•r man klikker p√• knappen
  btn.addEventListener("click", (event) => {
    event.stopPropagation();

    msg.classList.remove("hidden");

    // Skift knapfarve
    btn.classList.add("bg-orange-hover", "text-beige");
    btn.classList.remove("bg-beige", "text-orange");

    // Fjern hover
    btn.classList.remove("hover:bg-orange", "hover:text-beige");
  });

  // N√•r man klikker udenfor knappen
  document.addEventListener("click", () => {
    msg.classList.add("hidden");

    btn.classList.add("bg-beige", "text-orange");
    btn.classList.remove("bg-orange", "text-beige");

    btn.classList.add("hover:bg-orange", "hover:text-beige");
  });
</script>




